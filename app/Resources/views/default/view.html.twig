<div class="panel panel-primary product-view" id="currency-styles">
    <div class="panel-heading">
        <h3 class="panel-title">{{ product.name }}</h3>
    </div>
    <div class="panel-body">
        <h4>{{ product.description }}</h4>

        <p class="text-right">
            Price: <b>{{ product.price }}</b>
        </p>
        {% if product.pic %}
            {{ include('image_wrapper.html.twig') }}
        {% endif %}
    </div>
</div>
<div class="text-right">
    <button class="btn btn-danger back-to-list">Back</button>
</div>
<div id="image-preview-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src=""/>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->